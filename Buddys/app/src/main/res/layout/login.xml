<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#7DACFB"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_above="@id/editTextTextEmailAddress"
        android:outlineAmbientShadowColor="@color/black"
        android:text="Sign-In"

        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_70sdp"

        android:textSize="@dimen/_35ssp"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:hint="Mobile-No  or Email-id"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Password_Login"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Password"
        android:layout_below="@id/editTextTextEmailAddress"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Button_Login_In"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_below="@id/Password_Login"
        android:layout_height="wrap_content"
        android:text="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_above="@id/Button_SignGoogle"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_9sdp"
        android:maxLines="2"
        android:text="Or\nSignUp with"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/Button_SignFacebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"

        android:layout_above="@id/Button_NotAbuddyYet"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_10sdp"

        app:srcCompat="@drawable/github" />
    <ImageButton
        android:id="@+id/Button_SignGoogle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"

        android:layout_above="@id/Button_NotAbuddyYet"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_10sdp"

        app:srcCompat="@drawable/google1" />
    <ImageButton
        android:id="@+id/Button_SignGithub"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_above="@id/Button_NotAbuddyYet"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_70sdp"
        app:srcCompat="@drawable/facebook1"

        />

    <Button
        android:id="@+id/Button_NotAbuddyYet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="New Buddy ?" />
</RelativeLayout>